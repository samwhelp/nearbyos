pkgname=nearbyos-modeling-xdg-mime-applications
pkgver=0.1
pkgrel=1
pkgdesc="Nearbyos / Modeling / XDG MIME Applications / mimeapps.list"
url="https://github.com/samwhelp/nearbyos-packaging/tree/main/pack/core/xdg/nearbyos-modeling-xdg-mime-applications"
arch=('any')
license=('MIT')
makedepends=()
depends=()
conflicts=()
provides=("${pkgname}")
options=(!strip !emptydirs)


prepare () {

	cp -af ../asset/. "${srcdir}"

}


package () {

	##
	## Main Config
	##

	cp -af "${srcdir}/overlay/." "${pkgdir}"

}
